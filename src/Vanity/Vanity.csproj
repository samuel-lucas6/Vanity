<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
        <PublishReadyToRunShowWarnings>true</PublishReadyToRunShowWarnings>
        <TargetFramework>net6.0</TargetFramework>
        <AssemblyName>vanity</AssemblyName>
        <ApplicationIcon>vanity.ico</ApplicationIcon>
        <Version>1.0.0</Version>
        <Authors>Samuel Lucas</Authors>
        <Product>Vanity</Product>
        <Description>A simple WireGuard vanity public key generator.</Description>
        <Copyright>Copyright (C) 2023 Samuel Lucas</Copyright>
        <RepositoryUrl>https://github.com/samuel-lucas6/Vanity</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <NeutralLanguage>en-GB</NeutralLanguage>
        <PackageLicenseExpression>GPLv3</PackageLicenseExpression>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Geralt" Version="2.0.0" />
    </ItemGroup>

</Project>
